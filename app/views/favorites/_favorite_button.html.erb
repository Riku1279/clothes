<% if current_user.liking?(coordinate) %>
  <%= form_with(model: current_user.favorites.find_by(coordinate_id: coordinate.id),local:true,method: :delete)do |f| %>
    <%= hidden_field_tag :coordinate_id,coordinate.id %>
    <%= f.submit 'お気に入りを外す', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build,local: true) do |f| %>
    <%= hidden_field_tag :coordinate_id,coordinate.id %>
    <%= f.submit 'お気に入りに追加', class: 'btn btn-info btn-sm' %>
  <% end %>
<% end %>

  